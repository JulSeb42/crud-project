<main class="container">
    {{#with userPublic}}

    <h1>{{ fullName }}</h1>

    <img src="{{imgPath}}"/>

    <p> Lives in: {{ city }} </p>

    <p> Bio:  {{ bio }} </p>

    <div class="profile-event-container">
        <h4>Events they organise</h4>

       

        <ul class="list-events">
            {{#each event}}
            <li>
                <a href="/events/{{id}}">
                    <img src="{{ imgPath }}" alt="Cover {{ title }}">

                    <div class="content">
                        <h5>{{ title }}</h5>
                        <p>{{ location }}</p>
                    </div>
                </a>
            </li>
            {{/each}}
        </ul>
    </div>

    {{/with}}

</main>