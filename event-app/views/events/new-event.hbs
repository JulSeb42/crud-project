<main class="container container-form">
    <h1>Create a new event</h1>

    <form action="/events/new-event" method="POST" enctype="multipart/form-data">
        <input type="hidden" name="organiser" id="organiser" value="{{user._id}}">

        <div class="item">
            <label for="title">Name of the event</label>
            <input type="text" name="title" id="title">
        </div>

        <div class="item">
            <label for="location">Location of event</label>
            <input type="text" name="location" id="location">
        </div>

        <div class="item">
            <label for="startDate">Start date</label>
            <input type="date" name="startDate" id="startDate">
        </div>

        <div class="item">
            <label for="endDate">End date</label>
            <input type="date" name="endDate" id="endDate">
        </div>

        <div class="item">
            <label for="startTime">Start time</label>
            <input type="time" name="startTime" id="startTime">
        </div>

        <div class="item">
            <label for="endTime">End time</label>
            <input type="time" name="endTime" id="endTime">
        </div>

        <div class="item">
            <label for="cover">Cover</label>
            <input type="file" name="cover" id="cover">
        </div>

        <div class="item">
            <label for="description">Description</label>
            <textarea name="description" id="description"></textarea>
        </div>

        <div class="item">
            <label for="invite">Invite people</label>

            <ul id="listInvite" class="list-invite">
                {{#each allUsers}}
                <li>
                    <input type="checkbox" name="invitedPeople" id="user-{{_id}}" value="{{_id}}">

                    <label for="user-{{_id}}">
                        <img src="{{ imgPath }}" alt="Picture {{ fullName }}">

                        <span>
                            {{ fullName }}
                        </span>

                        <svg class="icon-check">
                            <use xlink:href="/images/icon-sprite.svg#check"></use>
                        </svg>
                    </label>
                </li>
                {{/each}}
            </ul>
        </div>

        <div class="item">
            <label for="confidentiality">Confidentiality: <span id="textConfidentiality"></span></label>
            <input type="checkbox" name="public" id="public" value="private">
        </div>

        <div class="buttons-container">
            <button type="submit" class="btn btn-primary">Create event</button>
            <a href="/profile" class="btn btn-secondary">Cancel</a>
        </div>
    </form>

    {{#if message}}
    <p>{{ message }}</p>
    {{/if}}
</main>
